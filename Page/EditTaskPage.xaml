<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TodoListApp1.Page.EditTaskPage"
             x:Name="EditPage"
             BackgroundColor="White"
             Shell.NavBarIsVisible="True">

    <ContentPage.Content>
        <ContentView>
            <Grid RowDefinitions="Auto,*,Auto,Auto,Auto"
                  Padding="20"
                  RowSpacing="20">

                <!-- Title Input -->
                <Entry x:Name="TitleEntry"
                       Grid.Row="0"
                       Placeholder="Task Title"
                       Text="{Binding ItemName}"
                       IsEnabled="{Binding IsEditable, Source={x:Reference Name=EditPage}}" />

                <!-- Description Editor -->
                <Frame Grid.Row="1"
                       Padding="10"
                       BorderColor="LightGray"
                       HasShadow="False">
                    <Editor x:Name="ContentEditor"
                            Placeholder="Task details"
                            Text="{Binding ItemDescription}"
                            IsEnabled="{Binding IsEditable, Source={x:Reference Name=EditPage}}" />
                </Frame>

                <!-- Update Button -->
                <Button Grid.Row="2"
                        Text="Update"
                        BackgroundColor="#4ECDC4"
                        TextColor="White"
                        Clicked="OnUpdateClicked"
                        HorizontalOptions="Fill" />

                <!-- Mark Finished / Unfinished -->
                <Button x:Name="StatusToggleButton"
                        Grid.Row="3"
                        Text="{Binding StatusButtonText, Source={x:Reference Name=EditPage}}"
                        BackgroundColor="#E0E0E0"
                        TextColor="Black"
                        Clicked="OnStatusToggleClicked"
                        HorizontalOptions="Fill" />

                <!-- Delete Button -->
                <Button Grid.Row="4"
                        Text="Delete"
                        BackgroundColor="#FF6B6B"
                        TextColor="White"
                        Clicked="OnDeleteClicked"
                        HorizontalOptions="Fill" />
            </Grid>
        </ContentView>
    </ContentPage.Content>
</ContentPage>

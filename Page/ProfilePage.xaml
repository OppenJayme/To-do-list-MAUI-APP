<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TodoListApp1.Page.ProfilePage"
             Title="Profile"
             BackgroundColor="#f0f9f9">

    <AbsoluteLayout>

        <!-- Profile Layout -->
        <Grid AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All"
              RowDefinitions="Auto,*,Auto" Padding="20">

            <!-- Header -->
            <Label Text="Profile"
                   FontFamily="PoppinsExtraBold"
                   FontSize="32"
                   HorizontalOptions="Center"
                   TextColor="Gray"
                   Grid.Row="0" />

            <!-- Profile Card -->
            <Frame Grid.Row="1"
                   CornerRadius="20"
                   BackgroundColor="#ffffff"
                   Padding="30"
                   HasShadow="True"
                   VerticalOptions="Center"
                   HorizontalOptions="Center">
                <StackLayout Spacing="20" HorizontalOptions="Center">

                    <!-- Circular Profile Image -->
                    <Image Source="your_profile_image.jpeg"
                           WidthRequest="160"
                           HeightRequest="160"
                           Aspect="AspectFill">
                        <Image.Clip>
                            <EllipseGeometry Center="80,80" RadiusX="80" RadiusY="80" />
                        </Image.Clip>
                    </Image>

                    <!-- User Info -->
                    <Label Text="Your Name"
                           FontFamily="PoppinsExtraBold"
                           FontSize="24"
                           HorizontalTextAlignment="Center"
                           TextColor="DimGray" />

                    <Label Text="your.email@example.com"
                           FontFamily="Poppins"
                           FontSize="14"
                           TextColor="#666"
                           HorizontalTextAlignment="Center" />

                    <!-- Sign Out Button -->
                    <Button Text="Sign Out"
                            BackgroundColor="#4EC5C1"
                            TextColor="White"
                            FontFamily="Poppins"
                            FontAttributes="Bold"
                            CornerRadius="10"
                            WidthRequest="200"
                            HeightRequest="40"
                            Clicked="OnSignOutClicked" />
                </StackLayout>
            </Frame>

        </Grid>
    </AbsoluteLayout>
</ContentPage>

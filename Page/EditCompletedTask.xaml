<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TodoListApp1.Page.EditCompletedTask"
             Shell.NavBarIsVisible="True">
        <ContentPage.Content>
        <Grid RowDefinitions="Auto,*,Auto,Auto,Auto"
              Padding="20"
              RowSpacing="20">
        
            <!-- Back button is handled in code-behind -->
        
            <!-- Title Input Field -->
            <Entry x:Name="TitleEntry"
                   Grid.Row="0"
                   Placeholder="Task Title"
                   Text="{Binding Title}" />
        
            <!-- Content/Description Input Field -->
            <Frame Grid.Row="1"
                   Padding="10"
                   BorderColor="LightGray"
                   HasShadow="False">
                <Editor x:Name="ContentEditor"
                        Placeholder="Task details"
                        Text="{Binding Content}"
                        AutoSize="TextChanges"
                        HeightRequest="100" />
            </Frame>
        
            <!-- Update Button -->
            <Button Grid.Row="2"
                    Text="Update"
                    BackgroundColor="#4ECDC4"
                    TextColor="White"
                    Clicked="OnUpdateClicked"
                    HorizontalOptions="Fill" />
        
            <!-- Mark Unfinished Button -->
            <Button Grid.Row="3"
                    Text="Mark Unfinished"
                    BackgroundColor="#E0E0E0"
                    TextColor="Black"
                    Clicked="OnMarkUnfinishedClicked"
                    HorizontalOptions="Fill" />
        
            <!-- Delete Button -->
            <Button Grid.Row="4"
                    Text="Delete"
                    BackgroundColor="#FF6B6B"
                    TextColor="White"
                    Clicked="OnDeleteClicked"
                    HorizontalOptions="Fill" />
        </Grid>
    </ContentPage.Content>  
</ContentPage>